<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Accordion xmlns:fx="http://javafx.com/fxml/1" fx:id="accordion" prefHeight="530.0" prefWidth="272.0"
           BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8"
           fx:controller="cz.vutbr.fit.pdb.component.rightbar.RightbarPresenter">
    <panes>
        <TitledPane fx:id="commonPane" animated="false" expanded="true" text="Common">
            <content>
                <GridPane layoutX="-22.0" layoutY="29.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name" GridPane.halignment="CENTER"
                              GridPane.rowIndex="1"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description" GridPane.halignment="CENTER"
                              GridPane.rowIndex="2"/>
                        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextArea fx:id="descriptionField" prefHeight="200.0" prefWidth="200.0" scaleShape="false"
                                  wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" GridPane.rowIndex="3"/>
                        <ImageView fx:id="flagView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                                   preserveRatio="true" GridPane.columnSpan="2" GridPane.halignment="CENTER"
                                   GridPane.valignment="CENTER"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="From" GridPane.halignment="CENTER"
                              GridPane.rowIndex="3"/>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="To" GridPane.halignment="CENTER"
                              GridPane.rowIndex="4"/>
                        <DatePicker fx:id="fromDate" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <DatePicker fx:id="toDate" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" prefHeight="480.0" prefWidth="328.0" text="Geometry">
            <content>
                <TabPane fx:id="geometryTabPane" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab fx:id="pointTab" text="Point">
                            <content>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="X"
                                              GridPane.halignment="CENTER"/>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Y"
                                              GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                                        <TextField GridPane.columnIndex="1" fx:id="xField"/>
                                        <TextField fx:id="yField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>
                        <Tab fx:id="lineTab" text="Line">
                            <content>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="StartX"
                                              GridPane.halignment="CENTER"/>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="StartY"
                                              GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="EndX"
                                              GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="EndY"
                                              GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
                                        <TextField fx:id="startXField" GridPane.columnIndex="1"/>
                                        <TextField fx:id="startYField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <TextField fx:id="endXField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <TextField fx:id="endYField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>

                        <Tab fx:id="circleTab" text="Circle">
                            <content>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CenterX"
                                              GridPane.halignment="CENTER"/>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CenterY"
                                              GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Radius"
                                              GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                                        <TextField fx:id="centerXField" GridPane.columnIndex="1"/>
                                        <TextField fx:id="centerYField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <TextField fx:id="radiusField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                    </children>
                                </GridPane>
                            </content>
                        </Tab>

                        <Tab fx:id="polygonTab" text="Polygon">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </content>
        </TitledPane>
        <TitledPane animated="false" text="Pictures">
            <content>
                <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Saved pictures"/>
                        <ListView fx:id="picturesView" prefHeight="200.0" prefWidth="200.0">
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                        </ListView>
                        <Button mnemonicParsing="false" onAction="#onLoadNewPhoto" text="Load new photo"/>
                    </children>
                </VBox>
            </content>
        </TitledPane>
    </panes>
</Accordion>
